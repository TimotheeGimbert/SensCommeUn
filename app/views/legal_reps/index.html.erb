<h1>Legal Reps</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Organization</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legal_reps.each do |legal_rep| %>
      <tr>
        <td><%= legal_rep.user_id %></td>
        <td><%= legal_rep.organization_id %></td>
        <td><%= legal_rep.start_date %></td>
        <td><%= legal_rep.end_date %></td>
        <td><%= link_to 'Show', legal_rep %></td>
        <td><%= link_to 'Edit', edit_legal_rep_path(legal_rep) %></td>
        <td><%= link_to 'Destroy', legal_rep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

